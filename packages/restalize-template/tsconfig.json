{
  "compilerOptions": {
    "target": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "allowJs": true,
    "declaration": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "exclude": ["./dist"]
}
